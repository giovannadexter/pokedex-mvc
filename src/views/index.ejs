<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Pokédex</title>
    <style>
        /* Estilo da página */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Cabeçalho da Pokédex */
        .header {
            text-align: center;
            background-color: #ffcc00;
            color: #1a1a1a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            width: 100%;
            max-width: 800px;
        }

        .header img {
            width: 50px;
            vertical-align: middle;
        }

        .header h1 {
            font-size: 2.5em;
            margin: 10px 0 5px;
            color: #333;
        }

        /* Botões */
        .button {
            background-color: #d9230f;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 1em;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin: 10px;
        }

        .button:hover {
            background-color: #b71c1c;
        }

        /* Container de cards dos Pokémons */
        .pokedex-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 20px;
            max-width: 800px;
            width: 100%;
            margin: 0 auto 40px auto; /* Centraliza e adiciona espaço abaixo */
            justify-content: center;
        }

        /* Estilo de cada card de Pokémon */
        .pokemon-card {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
            transition: transform 0.2s;
        }

        .pokemon-card:hover {
            transform: scale(1.05);
        }

        .pokemon-card a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
            display: block; /* Mantém o link em uma linha separada */
            font-size: 1.1em;
            margin-bottom: 8px; /* Espaço entre o nome e o tipo */
        }

        .pokemon-card .type {
            display: inline-block;
            background-color: #eee;
            color: #333;
            border-radius: 5px;
            padding: 5px 10px;
            font-size: 0.9em;
        }

        /* Cores para cada tipo de Pokémon */
        .type-fire { background-color: #ff7f0f; color: #fff; }
        .type-water { background-color: #3f51b5; color: #fff; }
        .type-grass { background-color: #4caf50; color: #fff; }
        .type-electric { background-color: #ffeb3b; color: #333; }
        .type-poison { background-color: #9c27b0; color: #fff; }
        /* Adicione mais cores conforme necessário */

        /* Centralizar os botões abaixo do grid */
        .button-container {
            display: flex;
            gap: 10px;
            justify-content: center;
        }
    </style>
</head>
<body>
    <!-- Cabeçalho -->
    <div class="header">
        <h1>Pokédex</h1>
    </div>

    <!-- Grid de Pokémons -->
    <div class="pokedex-grid">
        <% pokemons.forEach(function(pokemon) { %>
            <div class="pokemon-card">
                <a href="/pokemon/<%= pokemon.id %>"><%= pokemon.nome %></a>
                <div class="type type-<%= pokemon.tipo.toLowerCase() %>"><%= pokemon.tipo %></div>
            </div>
        <% }); %>
    </div>

    <!-- Botões centralizados abaixo do grid -->
    <div class="button-container">
        <a href="/add" class="button">Adicionar Novo Pokémon</a>
        <a href="/trainers" class="button">Ver Lista de Treinadores</a>
    </div>
</body>
</html>
