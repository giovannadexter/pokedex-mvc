<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Cadastrar Treinador</title>
    <script>
      function addPokemonField() {
          const container = document.getElementById('pokemonFields');
          
          // Criar campos de Nome e Tipo do Pokémon
          const nameInput = document.createElement('input');
          nameInput.type = 'text';
          nameInput.name = 'pokemonNomes';
          nameInput.placeholder = 'Nome do Pokémon';
          
          const typeInput = document.createElement('input');
          typeInput.type = 'text';
          typeInput.name = 'pokemonTipos';
          typeInput.placeholder = 'Tipo do Pokémon';

          container.appendChild(nameInput);
          container.appendChild(typeInput);
          container.appendChild(document.createElement('br'));
      }
    </script>
</head>
<body>
    <h1>Cadastrar Treinador</h1>
    <form action="/addTrainer" method="POST">
        <label for="nome">Nome do Treinador:</label>
        <input type="text" id="nome" name="nome" required><br><br>

        <label>Pokémons:</label>
        <div id="pokemonFields">
            <input type="text" name="pokemonNomes" placeholder="Nome do Pokémon" required>
            <input type="text" name="pokemonTipos" placeholder="Tipo do Pokémon" required><br><br>
        </div>
        <button type="button" onclick="addPokemonField()">Adicionar outro Pokémon</button><br><br>

        <button type="submit">Cadastrar</button>
    </form>
    <br>
    <a href="/">Voltar à Pokédex</a>
</body>
</html>
